<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adara.yashsd.kadmus.Main3Activity">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_kadmus_function_save"
        android:id="@+id/fabSeven"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bad_script"
            android:text="Kadmus"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25dp"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/alegreya_sans_medium"
                    android:text="DD"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/alegreya_sans_medium"
                    android:text="MMM"
                    android:textAlignment="center"
                    android:textColor="@color/dream_journal"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/alegreya_sans_medium"
                    android:text="YYYY"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:typeface="serif" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bad_script"
                    android:text="Title :"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/et2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sans_medium"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:text=""
                    android:typeface="serif"
                    android:inputType="textCapSentences"/>
            </LinearLayout>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scrollbars="horizontal">

            <Button
                android:id="@+id/bht"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_kadmuc_function_true_black" />

            <TextView
                android:id="@+id/tvht1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/hashtag_layout_dream_journal"
                android:textSize="15dp"
                android:text="#diary"
                android:fontFamily="@font/bad_script"
                android:textAlignment="center"
                android:typeface="serif"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tvht2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/hashtag_layout_dream_journal"
                android:fontFamily="@font/bad_script"
                android:textAlignment="center"
                android:text=""
                android:textSize="15dp"
                android:typeface="serif"
                android:maxLines="1" />
            <TextView
                android:id="@+id/tvht3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/hashtag_layout_dream_journal"
                android:fontFamily="@font/bad_script"
                android:textAlignment="center"
                android:textSize="15dp"
                android:typeface="serif"
                android:maxLines="1"
                android:text=""/>

            <TextView
                android:id="@+id/tvht4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/hashtag_layout_dream_journal"
                android:fontFamily="@font/bad_script"
                android:textAlignment="center"
                android:textSize="15dp"
                android:typeface="serif"
                android:maxLines="1"
                android:text=""/>

            <TextView
                android:id="@+id/tvht5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/hashtag_layout_dream_journal"
                android:fontFamily="@font/bad_script"
                android:textAlignment="center"
                android:textSize="15dp"
                android:typeface="serif"
                android:maxLines="1"
                android:text=""/>

            <TextView
                android:id="@+id/tvht6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/hashtag_layout_dream_journal"
                android:fontFamily="@font/bad_script"
                android:textAlignment="center"
                android:textSize="15dp"
                android:typeface="serif"
                android:maxLines="1"
                android:text=""/>

            <TextView
                android:id="@+id/tvht7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/hashtag_layout_dream_journal"
                android:fontFamily="@font/bad_script"
                android:textAlignment="center"
                android:textSize="15dp"
                android:typeface="serif"
                android:maxLines="1"
                android:text=""/>
            <TextView
                android:id="@+id/tvht8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/hashtag_layout_dream_journal"
                android:fontFamily="@font/bad_script"
                android:textAlignment="center"
                android:textSize="15dp"
                android:typeface="serif"
                android:maxLines="1"
                android:text=""/>
            <TextView
                android:id="@+id/tvht9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/hashtag_layout_dream_journal"
                android:fontFamily="@font/bad_script"
                android:textAlignment="center"
                android:textSize="15dp"
                android:typeface="serif"
                android:maxLines="1"
                android:text=""/>
            <TextView
                android:id="@+id/tvht10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/hashtag_layout_dream_journal"
                android:fontFamily="@font/bad_script"
                android:textAlignment="center"
                android:textSize="15dp"
                android:typeface="serif"
                android:maxLines="1"
                android:text=""/>
         </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bad_script"
            android:textAlignment="center"
            android:textSize="15dp"
            android:typeface="serif"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:id="@+id/etmainbody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:inputType="textCapSentences|textMultiLine"
            android:scrollbars="vertical"
            android:layout_weight="0"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:textSize="20dp"
            android:typeface="serif"
            android:text=""
            />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
